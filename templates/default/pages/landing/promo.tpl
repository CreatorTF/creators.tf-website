    <meta name="keywords" content="creatorstf, creators tf, tf, tf2, team fortress 2, promo">
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:url" content="https://creators.tf/promo">
    <meta name="twitter:image" content="{CDN}/assets/images/updates/opengraph/promo.png">
    <meta name="twitter:title" content="Creators.TF Promotional Page">
    <meta name="twitter:description" content="The goal of this project is to try and make unofficial updates to our beloved game with the help of community created content and, very importantly – with the authentic Team Fortress 2 spirit in mind.">
    <meta property="og:title" content="Creators.TF - Promotional Page">
    <meta property="og:type" content="website">
    <meta property="og:url" content="https://creators.tf/promo">
    <meta property="og:image" content="{CDN}/assets/images/updates/opengraph/promo.png">
    <meta property="og:description" content="The goal of this project is to try and make unofficial updates to our beloved game with the help of community created content and, very importantly – with the authentic Team Fortress 2 spirit in mind.">
    <link rel="stylesheet" href="{CDN}/assets/fonts/fonts{min}.css?v={Version}">
    <link rel="stylesheet" href="{CDN}/assets/styles/style{min}.css?v={Version}">
    <link rel="stylesheet" href="{CDN}/assets/styles/landing/promo.css?v={Version}">
</head>

<body l="{Language}" v="{Version}">
    <div class="bg-wrapper" id="bg1">
        <div class="container noborder noshadow" id="container_1">
            <div id="timer">
                <div class="timer_element timer_{timer:1}"></div>
                <div class="timer_element timer_{timer:2}"></div>
                <div class="timer_element timer_{timer:3}"></div>
                <div class="timer_element timer_{timer:4}"></div>
            </div>
        </div>
    </div>
    <div class="bg-wrapper" id="bg2">
        <div class="container noborder noshadow" id="container_2">
            <div class="text">
                <p>#TFPage_Promo_P1</p>
            </div>
        </div>
    </div>
    <div class="bg-wrapper" id="bg3">
        <div class="container noborder noshadow" id="container_3"></div>
    </div>
    <div class="bg-wrapper" id="bg4">
        <div class="container noborder noshadow" id="container_4">
            <div class="text">
                #TFPage_Promo_P2
            </div>
        </div>
    </div>
    <div class="bg-wrapper" id="bg5">
        <div class="container noborder noshadow" id="container_5"></div>
    </div>
    <div class="bg-wrapper" id="bg6">
        <div class="container noborder noshadow" id="container_6">
            <div class="text">
                #TFPage_Promo_P3
                <img src="/cdn/assets/images/tf_pages/promo/action_scheme.png">
            </div>
        </div>
    </div>
    <div class="bg-wrapper" id="bg8">
        <div class="container noborder noshadow" id="container_8">
            <div class="text">
                #TFPage_Promo_P4</br>
                <a href="https://twitter.com/intent/tweet?text=Become%20part%20of%20the%20Creators.TF%20project%20and%20help%20us%20deliver%20content%20to%20the%20community.&url=http://creators.tf">Twitter</a>
                • <a href="https://www.reddit.com/r/tf2/submit?url=http%3A%2F%2Fcreators.tf%2F&title=Creators.TF%20Community%20Updates">Reddit</a>
                • <a href="https://vk.com/share.php?url=http://creators.tf/">VK</a> •
                <a href="http://www.facebook.com/sharer.php?u=http://creators.tf">Facebook</a>
                <form id="form_request" method="POST" action="/submit_team">
                    <input required name="steamid" placeholder="#TFPage_Promo_Input_SteamID">
                    <select required name="job">
                        <option value="" disabled selected hidden>#TFPage_Promo_Select_Opt0</option>
                        <option>#TFPage_Promo_Select_Opt1</option>
                        <option>#TFPage_Promo_Select_Opt2</option>
                        <option>#TFPage_Promo_Select_Opt4</option>
                        <option>#TFPage_Promo_Select_Opt5</option>
                        <option>#TFPage_Promo_Select_Opt6</option>
                        <option>#TFPage_Promo_Select_Opt7</option>
                        <option>#TFPage_Promo_Select_Opt8</option>
                        <option>#TFPage_Promo_Select_Opt9</option>
                        <option>#TFPage_Promo_Select_Opt10</option>
                        <option>#TFPage_Promo_Select_Opt11</option>
                    </select>
                    <textarea name="about" placeholder="#TFPage_Promo_Textarea_About" required></textarea>
                    <input type="submit" value="#TFPage_Promo_Submit">
                </form>
                <br />
                <p>Credits: </br>
                    - <a href="http://steamcommunity.com/profiles/76561198188657895">Moonly Days</a> (Website, Organization, Layout, Graphics)<br />
                    - <a href="http://steamcommunity.com/profiles/76561198070719072">Dr. Dze</a> (Graphics, Texts)<br />
                    - <a href="http://steamcommunity.com/profiles/76561198327385902">Major Art</a> (Graphics)<br />
            </div>
        </div>
    </div>
    <div class="bg-wrapper" id="bg7">
        <div class="container noborder noshadow" id="container_7"></div>
    </div>
</body>

</html>
